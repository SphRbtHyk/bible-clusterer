# Dockerfile for SHAMan UI
FROM node as build

# copy the content of the frontend into the docker container
COPY frontend-vue/ /frontend-vue

# Change the permission to the files to the user node
RUN chown -R node: /frontend-vue && \
    chmod 744 /frontend-vue

# Set user as node
USER node

# make the 'frontend-vue' folder the current working directory
WORKDIR /frontend-vue

# Install dependencies
RUN npm install

# build app for production with minification
RUN npm run build

# Bind to correct host
ENV HOST 0.0.0.0